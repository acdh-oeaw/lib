{
	"name": "@acdh-oeaw/lib",
	"version": "0.3.7",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/acdh-oeaw/lib"
	},
	"type": "module",
	"main": "./dist/index.mjs",
	"exports": {
		".": "./dist/index.mjs"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"engines": {
		"node": ">=22"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.20.0",
	"scripts": {
		"build": "tsdown",
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"ci:version": "changeset version && oxfmt \"**/CHANGELOG.md\"",
		"format:check": "oxfmt --check",
		"format:fix": "oxfmt",
		"lint:check": "eslint . --cache",
		"lint:fix": "pnpm run lint:check --fix",
		"prepare": "run-s setup",
		"prepublishOnly": "run-s validate build",
		"setup": "is-in-ci || simple-git-hooks",
		"test": "NODE_OPTIONS=\"--import tsx\" uvu",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test"
	},
	"devDependencies": {
		"@acdh-oeaw/commitlint-config": "^3.0.0",
		"@acdh-oeaw/eslint-config": "^2.0.9",
		"@acdh-oeaw/eslint-config-node": "^2.0.9",
		"@acdh-oeaw/tsconfig-lib": "^1.3.0",
		"@arethetypeswrong/core": "^0.18.2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.5",
		"@commitlint/cli": "^20.1.0",
		"@sinonjs/fake-timers": "^15.0.0",
		"@types/node": "^24.10.0",
		"@types/sinonjs__fake-timers": "^15.0.1",
		"eslint": "^9.39.1",
		"eslint-config-flat-gitignore": "^2.1.0",
		"expect-type": "^1.2.1",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.6",
		"listhen": "^1.9.0",
		"npm-run-all2": "^8.0.4",
		"oxfmt": "^0.11.0",
		"simple-git-hooks": "^2.13.0",
		"tsdown": "^0.16.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"uvu": "^0.5.6"
	},
	"commitlint": {
		"extends": "@acdh-oeaw/commitlint-config"
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"oxfmt"
		],
		"*.!(js|ts)": "oxfmt --no-error-on-unmatched-patterne"
	},
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
